@model TatilSeyahatProjesiCore.Models.Siniflar.Iletisim

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AnaTema.cshtml";
}
<br />


<style>
    .contact-form-container {
        max-width: 650px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 30px 40px;
        border-radius: 10px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        font-family: 'Segoe UI', sans-serif;
    }

        .contact-form-container h2 {
            text-align: center;
            color: #8B0000;
            font-weight: bold;
            margin-bottom: 25px;
            font-size: 28px;
        }

        .contact-form-container label {
            font-weight: 600;
            display: block;
            margin-top: 15px;
            color: #333;
        }

        .contact-form-container input,
        .contact-form-container textarea {
            width: 100%;
            padding: 10px 12px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 15px;
            transition: 0.3s ease-in-out;
        }

            .contact-form-container input:focus,
            .contact-form-container textarea:focus {
                outline: none;
                border-color: #8B0000;
                box-shadow: 0 0 6px rgba(139, 0, 0, 0.3);
            }

        .contact-form-container textarea {
            resize: vertical;
            min-height: 120px;
        }

        .contact-form-container button {
            margin-top: 25px;
            background-color: #8B0000;
            color: white;
            padding: 12px 25px;
            font-size: 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .contact-form-container button:hover {
                background-color: #a22020;
            }
</style>

<div class="contact-form-container">
    <h2>İletişim Formu</h2>

    @if (ViewBag.Basarili != null)
    {
        <div style="background-color: #d4edda; color: #155724; padding: 15px; border: 1px solid #c3e6cb; border-radius: 5px; margin-bottom: 20px;">
            @ViewBag.Basarili
        </div>
    }

    <form method="post">
        <label>Ad Soyad</label>
        <input type="text" name="AdSoyad" required />

        <label>Mail</label>
        <input type="email" name="Mail" required />

        <label>Konu</label>
        <input type="text" name="Konu" required />

        <label>Mesaj</label>
        <textarea name="Mesaj" required></textarea>

        <button type="submit">Gönder</button>
    </form>
</div>
