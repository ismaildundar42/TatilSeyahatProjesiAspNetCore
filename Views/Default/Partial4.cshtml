@using TatilSeyahatProjesiCore.Models.Siniflar
@model List<Blog>

<div class="box1-left">
    @foreach (var x in Model)
    {
        <div class="bot-img">
            <a href="/Blog/BlogDetay/@x.BlogId">
                <img src="@x.BlogResim" style="width:120px;height:65px" alt="" />
            </a>
        </div>
        <div class="bot-desc1">
            <p>
                @{
                    var ozet = string.IsNullOrEmpty(x.Aciklama)
                    ? ""
                    : (x.Aciklama.Length > 50
                    ? x.Aciklama.Substring(0, 50) + "..."
                    : x.Aciklama);
                }
                @ozet
            </p>
        </div>
        <div class="clear"></div>
    }
</div>
