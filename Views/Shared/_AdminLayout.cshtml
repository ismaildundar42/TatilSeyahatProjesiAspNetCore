@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<title>Easy Trip | Admin Paneli</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<link rel="stylesheet" href="https://www.w3schools.com/w3css/5/w3.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

	<style>
		@@media screen and (max-width: 768px) {
			.w3-sidebar {
				display: none;
			}

			#menuToggleBtn {
				display: block !important;
			}
		}

		@@media screen and (min-width: 769px) {
			#menuToggleBtn {
				display: none !important;
			}
		}

		.sidebar-overlay {
			display: none;
			position: fixed;
			width: 100%;
			height: 100%;
			top: 0;
			left: 0;
			background-color: rgba(0, 0, 0, 0.3);
			z-index: 1;
		}

		.sidebar-open {
			display: block !important;
			z-index: 2;
		}
	</style>
</head>
<body>

	<!-- Mobile Menü Butonu -->
	<button id="menuToggleBtn" class="btn btn-outline-dark m-2">
		☰ Menü
	</button>

	<!-- Sidebar -->
	<div id="adminSidebar" class="w3-sidebar w3-light-grey w3-bar-block" style="width:15%">
		<h3 class="w3-bar-item">Menu</h3>

		<a href="/Default/Index/" class="w3-bar-item w3-button" style="display: flex; align-items: center;">
			<img src="https://cdn-icons-png.flaticon.com/512/25/25694.png" style="height: 20px; width: 20px; margin-right: 8px;" />
			Siteye Git
		</a>

		<a href="/Admin/Index/" class="w3-bar-item w3-button" style="display: flex; align-items: center;">
			<img src="https://cdn-icons-png.flaticon.com/512/151/151917.png" style="height: 20px; width: 20px; margin-right: 8px;" />
			Blog İşlemleri
		</a>

		<a href="/Admin/YorumListesi/" class="w3-bar-item w3-button" style="display: flex; align-items: center;">
			<img src="https://cdn-icons-png.flaticon.com/512/1380/1380338.png" style="height: 20px; width: 20px; margin-right: 8px;" />
			Yorum İşlemleri
		</a>

		<a href="/Admin/IletisimListesi/" class="w3-bar-item w3-button" style="display: flex; align-items: center;">
			<img src="https://cdn-icons-png.flaticon.com/512/3059/3059502.png" style="height: 20px; width: 20px; margin-right: 8px;" />
			İletişim İşlemleri
		</a>

		
		<a href="/Admin/HakkimizdaListesi/" class="w3-bar-item w3-button" style="display: flex; align-items: center;">
			<img src="https://cdn-icons-png.flaticon.com/512/942/942748.png"
				 style="height: 20px; width: 20px; margin-right: 8px;" />
			Hakkımızda İşlemleri
		</a>

		
		<a href="/Admin/SSSListesi/" class="w3-bar-item w3-button" style="display: flex; align-items: center;">
			<img src="https://cdn-icons-png.flaticon.com/512/545/545705.png"
				 style="height: 20px; width: 20px; margin-right: 8px;" />
			SSS İşlemleri
		</a>



		<a href="/Admin/AdminListesi" class="w3-bar-item w3-button" style="display: flex; align-items: center;">
			<img src="https://cdn-icons-png.flaticon.com/512/747/747376.png"
				 style="height: 20px; width: 20px; margin-right: 8px; filter: grayscale(100%);" />
			Admin İşlemleri
		</a>

		<a href="/Login/Logout" class="w3-bar-item w3-button" style="display: flex; align-items: center;">
			<img src="https://cdn-icons-png.flaticon.com/512/1828/1828479.png" style="height: 20px; width: 20px; margin-right: 8px; filter: grayscale(100%);" />
			Çıkış Yap
		</a>



	</div>

	<!-- İçerik -->
	<div style="margin-left:15%" class="w3-container">
		<div class="w3-container w3-teal">
			<h1>Easy Trip - Admin Paneli</h1>
		</div>

		<div class="w3-container">
			@RenderBody()
		</div>
	</div>

	<!-- JS: Mobil menü toggle -->
	<script>
		const toggleBtn = document.getElementById("menuToggleBtn");
		const sidebar = document.getElementById("adminSidebar");

		toggleBtn.addEventListener("click", function () {
			if (sidebar.style.display === "block") {
				sidebar.style.display = "none";
			} else {
				sidebar.style.display = "block";
			}
		});
	</script>
	@RenderSection("Scripts", required: false)
</body>
</html>
